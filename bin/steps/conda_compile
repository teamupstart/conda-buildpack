export PATH=/app/.heroku/miniconda3/bin:$PATH

if [ ! -d /app/.heroku/miniconda ]; then
    puts-step "Preparing Python3/Miniconda Environment (3.8.3)"
    curl -Os http://repo.continuum.io/miniconda/Miniconda3-3.8.3-Linux-x86_64.sh
    bash Miniconda3-3.8.3-Linux-x86_64.sh  -p /app/.heroku/miniconda/ -b | indent
    rm -fr Miniconda3-3.8.3-Linux-x86_64.sh

    conda install pip --yes | indent
fi


if [ -f conda-requirements.txt ]; then
    puts-step "Installing dependencies using Conda"
    conda install --file conda-requirements.txt --yes | indent
fi

puts-step "Cleaning up the installation environment."
conda clean -pt --yes
